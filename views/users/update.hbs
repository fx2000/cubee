<h1>UPDATE PROFILE</h1>
<form action="/users/update" method="post" enctype="multipart/form-data" autocomplete="on">
  <label for="name">Name</label>
  <input type="text" name="name" autocomplete="given-name" value="{{user.name}}">
  <br />
  <label for="lastName">Last Name</label>
  <input type="text" name="lastName" autocomplete="family-name" value="{{user.lastName}}">
  <br />
  <label for="email">Email</label>
  <input type="email" name="email" autocomplete="email" value="{{user.email}}">
  <br />
  <label for="birthday">Date of Birth</label>
  <input type="date" name="birthday" autocomplete="bday" value="{{user.birthday}}">
  <br />
  <label for="username">Username</label>
  <input type="text" name="username" value="{{user.username}}">
  <br />
  <img src="{{user.avatar}}" alt="Avatar of {{user.name}} {{user.lastName}}" height="300" width="300">
  <br/>
  <a href="/users/delete-avatar/{{user._id}}">Delete Avatar</a> <!-- TODO: Create this route -->
  <br/>
  <label for="avatar">Change Avatar</label>
  <input type="file" name="avatar" autocomplete="photo">
  <br />
  <input type="submit" value="Update">
</form>
<p>{{error}}</p>

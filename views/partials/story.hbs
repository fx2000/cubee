<main class="card-container">
  <header class="bg-white">
    <div class="bg-white">
      <h2 class="bg-white">{{title}}</h2>
    </div>
    <div class="dice-container bg-white">
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
    </div>
  </header>
  <section class="story-container bg-white">
    <article class="bg-white">
      <p class="bg-white">{{content}}</p>
    </article>
    <div class="author-container bg-white">
      <p class="bg-white">Created by: <a href="/users/{{this.author._id}}">{{this.author.username}}</a></p>
      <a class="bg-white" href="/users/{{this.author._id}}"><img src="{{this.author.avatar}}" alt="Avatar of {{this.author.username}}"></a>
    </div>  
  </section>
  <section class="interaction-container bg-white">
    <div class="bg-white">
      <a class="bg-white" href="/">Details & Comments</a>
    </div>
    <div class="radio-group">
          <input type="radio" id="vote-ok" name="vote" value="1" checked>
          <label class="radio-label" for="vote-ok"><img src="" alt=""></label>
          <input type="radio" id="vote-no" name="vote" value="-1">
          <label class="radio-label" for="vote-no"><img src="" alt=""></label>
        </div>
    <button class="btn-vote" form="vote">Vote!</button>
  </section>
  <p class="bg-white">Time & Date: {{createdAt}}</p>
</main>



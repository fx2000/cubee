<main class="card-container">
  <header class="bg-white">
    <div class="bg-white">
      <h2 class="bg-white">{{title}}</h2>
    </div>
    <div class="dice-container bg-white">
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
        <div class="bg-white">
          <div class="dice"></div>
          <div class="dice"></div>
          <div class="dice"></div>
        </div>
    </div>
  </header>
  <section class="story-container bg-white">
    <article class="bg-white">
      <p class="bg-white">{{content}}</p>
    </article>
    <div class="author-container bg-white">
      <p class="bg-white">Created by: <a href="/users/{{this.author._id}}">{{this.author.username}}</a></p>
      <a class="bg-white" href="/users/{{this.author._id}}"><img src="{{this.author.avatar}}" alt="Avatar of {{this.author.username}}"></a>
    </div>  
  </section>
  <section class="interaction-container bg-white">
    <div class="bg-white">
      <a class="bg-white" href="/">Details & Comments</a>
    </div>
    <div class="normal-container">
	<div class="smile-rating-container">
      <div class="smile-rating-toggle-container">
        <form class="submit-rating" action="/stories/vote/{{_id}}" method="POST" name="vote" id="vote">
          <input id="meh"  name="vote" type="radio" value="up" /> 
          <input id="fun" name="vote" type="radio" value="down"/> 
          <label for="meh" class="rating-label rating-label-meh"></label>
          <div class="smile-rating-toggle"></div>
          
          <div class="rating-eye rating-eye-left"></div>
          <div class="rating-eye rating-eye-right"></div>
          
          <div class="mouth rating-eye-bad-mouth"></div>
          
          <div class="toggle-rating-pill"></div>
          <label for="fun" class="rating-label rating-label-fun"></label>
        
          
        </form>
      </div>
    </div>
  </div>
  <button class="btn-vote" form="vote">Vote!</button>
  </section>
  <p class="bg-white">Time & Date: {{createdAt}}</p>
</main>


